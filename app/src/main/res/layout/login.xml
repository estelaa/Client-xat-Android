<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:gravity="center_horizontal"
    android:background="@color/backgroundLogin">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/chat"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/text"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:textColorHighlight="@color/txtUserLogin"
                android:textColorHint="@color/txtUserLogin"
                android:hint="User"
                android:textStyle="normal"
                android:theme="@style/AlertDialog.AppCompat.Light"
                android:textColor="@color/txtUserLogin"
                android:imeOptions="actionSend"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@color/backgroundButton"
                android:hint="LOGIN"
                android:textColorHint="@color/txtUserLogin"
                android:id="@+id/buttonStar"
                android:layout_below="@+id/text"
                android:gravity="center"
                android:theme="@style/AlertDialog.AppCompat.Light"
                android:layout_marginTop="20dp"/>

        </LinearLayout>





</RelativeLayout>
